package com.mit.navigation.entities;

import com.mit.map.entities.Point;

public class Path {
	private Point fromPoint;
	private Point toPoint;
	private int direction;
	private double distance;
	
	public Path() {
		super();
	}

	public Path(Point fromPoint, Point toPoint, int direction, double distance) {
		super();
		this.fromPoint = fromPoint;
		this.toPoint = toPoint;
		this.direction = direction;
		this.distance = distance;
	}

	public Point getFromPoint() {
		return fromPoint;
	}

	public void setFromPoint(Point fromPoint) {
		this.fromPoint = fromPoint;
	}

	public Point getToPoint() {
		return toPoint;
	}

	public void setToPoint(Point toPoint) {
		this.toPoint = toPoint;
	}

	public int getDirection() {
		return direction;
	}

	public void setDirection(int direction) {
		this.direction = direction;
	}

	public double getDistance() {
		return distance;
	}

	public void setDistance(double distance) {
		this.distance = distance;
	}

}
